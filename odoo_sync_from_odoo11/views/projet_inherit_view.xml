<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inheritance de la vue formulaire du modÃ¨le project.project -->
        <record id="inherit_view_id_inherit_module_namee" model="ir.ui.view">
            <field name="name">project.odoosyncfromodoo11.view.form.inheritt</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
   
                <xpath expr="//notebook" position="before">
                    <group string="Informations Projet" colspan="4" >
                        <group >
                            <field name="bc" readonly="1"/>
                            <field name="nature" />
                            <field name="domaine" />
                            <field name="am" />
                            <field name="presales" />
                            <field name="date_in" />
                            <field name="pays" />
                            <field name="sc" />
                            <field name="delaicontractuel" />
                            <!-- <field name="cas" /> -->
                            
                        </group>
                        <group >
                            <field name="revenue_type" />
                            <field name="bu" />
                            <field name="cat_recurrent" />
                            <field name="cas_build" />
                            <field name="cas_run" />
                            <field name="cas_hw" />
                            
                            <!-- <field name="cafy" />
                            <field name="rafytd" />
                            <field name="cafypercent" />
                            <field name="rafy_1" />
                            <field name="projected_caf_y" />
                            <field name="raftotal" />
                            <field name="percentcaftotal" /> -->
                            <field name="priorite" />
                            <field name="risque" />
                            <field name="etat_projet" />
                            <field name="last_notice_date" />
                            <field name="contratstartdate" />
                            <field name="contratenddate" />
                            
                        </group>
                        

                    </group>
                </xpath>
                
            </field>
        </record>

      <record id="inherit_view_id_inherit_project_kanban" model="ir.ui.view">
            <field name="name">project.view.form.inherit.project.kanban</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <div class="o_row">
                        <label for="bc" string="BC"/>
                        <field name="bc" readonly="1" class="oe_inline"/>
                    </div>
                    <div class="o_row">
                        <label for="etat_projet" string="Etat"/>
                        <field name="etat_projet" string="Etat" class="oe_inline"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>