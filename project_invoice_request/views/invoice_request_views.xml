<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire de la demande de facturation -->
    <record id="project_invoice_request_formm" model="ir.ui.view">
        <field name="name">project.invoice.request.formm</field>
        <field name="model">project.invoice.request</field>
        <field name="arch" type="xml">
            <form string="Demande de Facturation">
                <header>
                    <button name="action_submit" string="Soumettre" type="object" 
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approuver" type="object" 
                            class="btn-success"
                            invisible="state != 'submitted'"/>
                    <button name="action_reject" string="Rejeter" type="object" 
                            class="btn-danger"
                            invisible="state != 'submitted'"/>
                    <button name="action_create_invoice" string="Créer Facture" type="object" 
                            class="btn-info"
                            invisible="state != 'approved'"/>
                    <button name="action_reset_to_draft" string="Remettre en Brouillon" type="object" 
                            class="btn-outline-secondary"
                            invisible="state not in ['submitted', 'rejected']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,rejected,invoiced"/>
                </header>
                
                <sheet>
                    <group>
                        <group string="Informations Générales">
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="sale_order_id"/>
                            <field name="state" readonly="1"/>
                        </group>
                        <group string="Montants">
                            <field name="currency_id" invisible="1"/>
                            <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="invoice_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <group string="Description">
                        <field name="description" placeholder="Description de la demande de facturation..." nolabel="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Lignes de Facturation">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="montant_facture" string="Déjà Facturé"/>
                                    <field name="montant_restant" string="Montant Restant"/> 
                                    <field name="montant_a_facturer" string="Montant à Facturer" required="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Documents Joints">
                            <field name="attachment_ids" 
                                   string="Documents"
                                   widget="many2many_binary"
                                   context="{'default_res_model': 'project.invoice.request', 'default_res_id': id}"
                                   options="{'preview_name': 'name'}">
                                <list>
                                    <field name="name"/>
                                    <field name="create_date" string="Date"/>
                                    <field name="create_uid" string="Ajouté par"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="datas" filename="name"/>
                                        <field name="description"/>
                                    </group>
                                </form>
                            </field>
                            
                            <group>
                                <label for="document_count" string="Nombre de Documents"/>
                                <field name="document_count" widget="statinfo" string="Documents" class="oe_inline"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div> -->
            </form>
        </field>
    </record>
    
    <!-- Vue liste des demandes de facturation -->
    <record id="project_invoice_request_treee" model="ir.ui.view">
        <field name="name">project.invoice.request.listt</field>
        <field name="model">project.invoice.request</field>
        <field name="arch" type="xml">
            <list string="Demandes de Facturation">
                <field name="name"/>
                <field name="project_id"/>
                <field name="sale_order_id"/>
                <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total"/>
                <field name="document_count" string="Docs" widget="statinfo"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'approved'"
                       decoration-warning="state == 'submitted'"
                       decoration-info="state == 'invoiced'"
                       decoration-danger="state == 'rejected'"
                       decoration-muted="state == 'draft'"/>
            </list>
        </field>
    </record>

    <!-- Vue recherche des demandes de facturation -->
    <record id="project_invoice_request_search" model="ir.ui.view">
        <field name="name">project.invoice.request.search</field>
        <field name="model">project.invoice.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Référence"/>
                <field name="project_id" string="Projet"/>
                <field name="sale_order_id" string="Commande"/>
                
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Soumises" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approuvées" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejetées" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <filter string="Facturées" name="invoiced" domain="[('state', '=', 'invoiced')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Projet" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="État" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Commande" name="group_by_sale_order" context="{'group_by': 'sale_order_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action pour les demandes de facturation -->
    <record id="action_project_invoice_request" model="ir.actions.act_window">
        <field name="name">Demandes de Facturation</field>
        <field name="res_model">project.invoice.request</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="project_invoice_request_search"/>
        <field name="context">{'search_default_draft': 1}</field>
    </record>
    
    <!-- Menu -->
    <menuitem id="menu_project_invoice_request"
              name="Demandes de Facturation"
              parent="project.menu_main_pm"
              action="action_project_invoice_request"
              sequence="10"/>
</odoo>